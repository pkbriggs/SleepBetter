extends layout

block head
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src="../quiz.js", type="text/javascript")
  script(src='../sweetalert.min.js')
  link(rel='stylesheet', type='text/css', href='../sweetalert.css')



block content
  .quiz_page
    .entire_quiz_container
      h1.serif_text Sleep Quiz
      span.subtitle let's test your skills!

      .inner_quiz_container
        .quiz_question.serif_text
          | During which part of sleep do people dream?

        hr

        //- each response in ["REM Sleep", "Non-REM Sleep", "Deep Sleep", "Polygraphic Sleep"]

        .response_choice
          input.response_1(type='radio', name='answer', value='1')
          span.response_text.response_1_text REM Sleep

        .response_choice
          input.response_2(type='radio', name='answer', value='2')
          span.response_text.response_2_text Non-REM Sleep

        .response_choice
          input.response_3(type='radio', name='answer', value='3')
          span.response_text.response_3_text Deep Sleep

        .response_choice
          input.response_4(type='radio', name='answer', value='4')
          span.response_text.response_4_text Polygraphic Sleep

        .quiz_button_container
          .button.purple_button.small_button.next_button
            | Next

        //- input(type='radio', name='answer', value='response')
        //-   | Non-REM Sleep

        //- input(type='radio', name='answer', value='response')
        //-   | Deep Sleep

        //- input(type='radio', name='answer', value='response')
        //-   | Polygraphic Sleep

      .quiz_progress_bar
        .outer_bar
          .bar_progress
        .progress_bar_text
          span.progress_bar_text_number
            | 0
          span
            | % complete